<?xml version="1.0" encoding="UTF-8"?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 
<mapper namespace="com.shizuwei.dal.main.dao.UserMapper"> 
	<insert id="insert" parameterType="User">  
        insert into user(wx_name,account_number) values(#{wxName},#{accountNumber})  
    </insert>  
      
    <update id="update" parameterType="User">  
        update user set wx_name=#{wx_name},account_number=#{accountNumber} where id=#{id}  
    </update>  
      
    <delete id="delete" parameterType="int">  
        delete from user where user_id=#{id}  
    </delete>  
      
    <select id="getById" parameterType="int" resultType="User">  
        select user_id as id, wx_name, account_number from user where user_id=#{id}  
    </select>  
    
    <select id="getByNumber" parameterType="string" resultType="User">  
        select user_id as id, wx_name, account_number from user where account_number=#{number}  
    </select>  
    
    
    
    <resultMap type="User" id="listMap">
		<id property="id" column="user_id" />
		<result property="wxName" column="wx_name" />
		<result property="accountNumber" column="account_number" />
	</resultMap>
	
    <select id="list" resultMap="listMap">  
        select * from user  
    </select>  
    
</mapper>